<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393E46"
    tools:context=".Activity.Tiffin_Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit more details"
        android:textStyle="bold"
        android:textColor="#32E0C4"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"

        />

    <Spinner
        android:id="@+id/serivce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:entries="@array/service"
        android:layout_above="@+id/place"
        android:layout_marginBottom="20dp"
        />
    <EditText
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle"
        android:hint="    please enter place "
        android:layout_above="@+id/name"
        android:layout_marginBottom="20dp"
        android:inputType="text"
        android:textColor="#32E0C4"
        android:textColorHint="#32E0C4"
        android:foregroundTint="#32E0C4"
        android:ems="10"
        />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/rectangle"
        android:hint="  please enter name of the provider"
        android:inputType="text"
        android:textColor="#32E0C4"
        android:textColorHint="#32E0C4"
        android:foregroundTint="#32E0C4"
        android:ems="10"
        />

    <EditText
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle"
        android:hint="    Provide contact no."
        android:layout_below="@+id/name"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:textColor="#32E0C4"
        android:textColorHint="#32E0C4"
        android:foregroundTint="#32E0C4"
        android:ems="10"
        />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/contact"
        android:text="Submit"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#393E46"
        android:layout_marginTop="20dp"
        />
