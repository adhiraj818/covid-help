<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393E46"
    tools:context=".Activity.VarficationActivity">

    <TextView
        android:id="@+id/steps_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steps to get varified"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textColor="#32E0C4"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/steps_heading"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
    <TextView
        android:id="@+id/steps_to_varify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/varification"
        android:textColor="#32E0C4"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/square"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:text="kindly send us your details"
            android:textColor="#32E0C4"/>
        <Button
            android:id="@+id/mail_us_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_centerInParent="true"
            android:text="Mail Us"
            android:textSize="20sp"
            />

    </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>